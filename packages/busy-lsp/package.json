{
  "name": "busy-lsp",
  "displayName": "BUSY Language Support",
  "description": "Language server and VS Code extension for BUSY markdown documents",
  "version": "0.1.18",
  "publisher": "busy-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bravo-Tensor/busy-lang"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [],
  "main": "./dist/client/extension.js",
  "bin": {
    "busy-lsp": "./dist/server/server.js"
  },
  "contributes": {
    "languages": [
      {
        "id": "busy",
        "aliases": [
          "BUSY",
          "busy"
        ],
        "extensions": [
          ".busy.md",
          ".busy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "busy",
        "scopeName": "text.html.markdown.busy",
        "path": "./syntaxes/busy.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.yaml": "yaml"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BUSY",
      "properties": {
        "busy.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "build": "npm run esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/client/extension.ts --bundle --outfile=dist/client/extension.js --external:vscode --format=cjs --platform=node && esbuild ./src/server/server.ts --bundle --outfile=dist/server/server.js --format=cjs --platform=node",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package",
    "test": "vitest"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "keywords": [
    "busy",
    "language-server",
    "lsp",
    "markdown",
    "vscode"
  ],
  "license": "ISC"
}
