{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://busy-lang.org/schemas/v2/responsibility-schema.json",
  "title": "Responsibility Definition Schema",
  "description": "Schema for BUSY responsibility definitions (special type of capability for continuous monitoring)",
  "type": "object",
  "required": ["name", "description", "method"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "description": "Responsibility identifier (kebab-case)"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of what is being monitored/maintained"
    },
    "method": {
      "type": "string",
      "minLength": 1,
      "description": "Detailed description including monitoring approach, thresholds, and enforcement actions"
    },
    "inputs": {
      "oneOf": [
        {
          "type": "string",
          "const": "none"
        },
        {
          "type": "array",
          "items": {
            "$ref": "capability-schema.json#/definitions/input_output_spec"
          }
        }
      ],
      "description": "Input specifications or 'none' (often 'none' for monitoring)"
    },
    "outputs": {
      "oneOf": [
        {
          "type": "string",
          "const": "none"
        },
        {
          "type": "array",
          "items": {
            "$ref": "capability-schema.json#/definitions/input_output_spec"
          }
        }
      ],
      "description": "Output specifications (usually notifications/alerts)"
    }
  },
  "additionalProperties": false
}