{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://busy-lang.org/schemas/v2/resource-schema.json",
  "title": "Resource Definition Schema",
  "description": "Schema for BUSY resource definitions",
  "type": "object",
  "required": ["name", "characteristics"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Resource identifier (snake_case)"
    },
    "extends": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Parent resource to inherit characteristics from"
    },
    "characteristics": {
      "type": "object",
      "description": "Flexible key-value pairs describing the resource",
      "properties": {
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of capability names this resource provides"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}