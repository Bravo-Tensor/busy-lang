{
  "name": "@busy-lang/compiler",
  "version": "0.1.0",
  "description": "BUSY Language compiler and static analyzer for business process validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "busy-check": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:v2": "jest --testPathPattern=v2",
    "test:runtime": "jest --testPathPattern=runtime",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:e2e": "jest --testPathPattern=end-to-end",
    "test:ast": "jest --testPathPattern=ast-nodes",
    "test:schema": "jest --testPathPattern=schema-validation",
    "test:capability": "jest --testPathPattern=capability-resolver",
    "test:resource": "jest --testPathPattern=resource-manager",
    "test:execution": "jest --testPathPattern=execution-manager",
    "test:busy-runtime": "jest --testPathPattern=busy-runtime",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "analyze": "ts-node src/cli/index.ts analyze",
    "validate": "ts-node src/cli/index.ts validate",
    "ide:server": "ts-node src/cli/index.ts ide server",
    "ide:package": "ts-node src/cli/index.ts ide package",
    "ide:install": "ts-node src/cli/index.ts ide install-vscode",
    "viz:demo": "ts-node src/visualization/serve-demo.ts",
    "viz:test": "ts-node src/visualization/cli-test.ts"
  },
  "keywords": [
    "busy",
    "business-process",
    "compiler",
    "static-analysis",
    "yaml",
    "validation"
  ],
  "author": "BUSY Language Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "d3": "^7.8.5",
    "fast-json-stringify": "^5.8.0",
    "glob": "^10.3.0",
    "graphlib": "^2.1.0",
    "semver": "^7.5.0",
    "tsconfig-paths": "^4.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "schemas/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/busy-lang/busy-lang.git",
    "directory": "compiler"
  }
}
