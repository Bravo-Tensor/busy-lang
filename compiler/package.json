{
  "name": "@busy-lang/compiler",
  "version": "0.1.0",
  "description": "BUSY Language compiler and static analyzer for business process validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "busy-check": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "busy",
    "business-process",
    "compiler",
    "static-analysis",
    "yaml",
    "validation"
  ],
  "author": "BUSY Language Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fast-json-stringify": "^5.8.0",
    "glob": "^10.3.0",
    "graphlib": "^2.1.0",
    "semver": "^7.5.0",
    "tsconfig-paths": "^4.2.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "schemas/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/busy-lang/busy-lang.git",
    "directory": "compiler"
  }
}
